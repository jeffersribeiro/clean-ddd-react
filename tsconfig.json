{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@presentation/*": ["presentation/*"],
      "@main/*": ["main/*"]
    }
  },
  "include": ["src", "tests", "*.js"],
  "exclude": ["tests/e2e/cypress"]
}
